<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/infoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="30sp" />

        <EditText
                android:id="@+id/editText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/infoTextView"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:enabled="false"
                android:gravity="bottom"
                android:maxLines="2"
                android:textSize="25sp" />
        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonSeven"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText"

                android:onClick="onNumberClick"
                android:text="@string/_7"
                android:textSize="20sp"
                />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonEight"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonSeven"
                android:text="@string/_8"
                android:textSize="20sp"/>

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonNine"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonEight"
                android:text="@string/_9"
                android:textSize="20sp"
        />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonDivide"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText"
                android:onClick="onOperatorClick"
                android:layout_toEndOf="@id/buttonNine"
                android:text="@string/_divide"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonFour"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSeven"
                android:onClick="onNumberClick"
                android:text="@string/_4"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonFive"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSeven"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonFour"
                android:text="@string/_5"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonSix"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSeven"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonFive"
                android:text="@string/_6"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonTimes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonSeven"
                android:onClick="onOperatorClick"
                android:layout_toEndOf="@id/buttonSix"
                android:text="@string/_times"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonOne"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onNumberClick"
                android:layout_below="@id/buttonFour"
                android:text="@string/_1"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonTwo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonFour"
                android:onClick="onNumberClick"
                android:text="@string/_2"
                android:layout_toEndOf="@id/buttonOne"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonThree"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonFour"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonTwo"
                android:text="@string/_3"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonMinus"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonFour"
                android:onClick="onOperatorClick"
                android:layout_toEndOf="@id/buttonThree"
                android:text="@string/_minus"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonDot"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonOne"
                android:onClick="onNumberClick"
                android:text="@string/_dot"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonZero"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonOne"
                android:onClick="onNumberClick"
                android:layout_toEndOf="@id/buttonDot"
                android:text="@string/_0"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonEqual"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonOne"
                android:onClick="onOperatorClick"
                android:layout_toEndOf="@id/buttonZero"
                android:text="@string/_equal"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:id="@+id/buttonPlus"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonOne"
                android:onClick="onOperatorClick"
                android:layout_toEndOf="@id/buttonEqual"
                android:text="@string/_plus"
                android:textSize="20sp" />

        <Button
                android:paddingVertical="@dimen/activity_vertical_padding"
                android:paddingHorizontal="@dimen/activity_vertical_padding"
                android:id="@+id/buttonClear"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_below="@id/buttonPlus"
                android:onClick="onOperatorClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/_clear"
                android:textSize="20sp"
        />

    </RelativeLayout>
</layout>